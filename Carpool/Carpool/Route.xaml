<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Carpool.Route" 
             >
  <ScrollView>
    <StackLayout Style="{StaticResource contentPageStyle}">
      <StackLayout Style="{StaticResource stackContent}">
        <Label Text="Driver Profile" FontAttributes="Bold" FontSize="Large"></Label>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
          
          <Image Source="profile.jpg" WidthRequest="100"></Image>
          <StackLayout Orientation="Vertical" Padding="15,0,0,0">
            <Label Text="Luis Manuel Rodriguez" FontSize="Large" ></Label>
            <Label Text="Age: 22"></Label>
            <Label Text="Phone: 4433623685"></Label>
          </StackLayout>

        </StackLayout>
        <Label Text="Route Information" FontAttributes="Bold" FontSize="Large"></Label>
        
        <Label Text="This is the route information only for debug purposes, i dont know what to put here so i invented something" FontSize="Medium"></Label>
        <Label Text="Depart 14:00" FontSize="Large"></Label>
      
        <Image Source="map.jpg"></Image>


      </StackLayout>
    </StackLayout>


  </ScrollView>
</ContentPage>