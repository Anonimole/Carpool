<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Carpool.SignUp"
             Title="Sign Up" BackgroundColor="Blue">

  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness">
      <OnPlatform.iOS>
        0,20,0,0
      </OnPlatform.iOS>
    </OnPlatform>
  </ContentPage.Padding>


  <ScrollView>
    <StackLayout Style="{StaticResource contentPageStyle}">

      <StackLayout Style="{StaticResource stackContent}">

        <Entry x:Name="emailEntry" Placeholder="Email" />
        <Entry x:Name="passwordEntry" Placeholder="Password"  IsPassword="True" />
        <Button Text="Sign Up" Style="{StaticResource buttonSuccessStyle}" Clicked="Profile"></Button>

      </StackLayout>

    </StackLayout>

  </ScrollView>
</ContentPage>