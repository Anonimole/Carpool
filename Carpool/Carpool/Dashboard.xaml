<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Carpool.Dashboard"
             Title=" Dashboard"
            BackgroundColor="#26A69A"
          >
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness">
      <OnPlatform.iOS>
        0,20,0,0
      </OnPlatform.iOS>
    </OnPlatform>
  </ContentPage.Padding>

  <StackLayout Orientation="Vertical" Spacing="10">
    <StackLayout Orientation="Horizontal" Padding="10,10,10,0">
      <Entry  HorizontalOptions="FillAndExpand"></Entry>
      <Button Text="Search" Style="{StaticResource buttonSuccessStyle}"></Button>
    </StackLayout>

    <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand">
      <ListView x:Name="routesList" BackgroundColor="White"></ListView>

    </StackLayout>
  </StackLayout>

</ContentPage>