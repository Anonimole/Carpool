<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Carpool.Dashboard"
             Title=" Dashboard">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness">
      <OnPlatform.iOS>
        0,20,0,0
      </OnPlatform.iOS>
    </OnPlatform>
  </ContentPage.Padding>


  <ContentPage.ToolbarItems >
    <ToolbarItem Name="Profile" Order="Secondary" Priority="0" />
    <ToolbarItem Name="My routes"   Order="Secondary" Priority="1" />
    <ToolbarItem Name="Log off"   Order="Secondary" Priority="2" />
  </ContentPage.ToolbarItems>

  <StackLayout Style="{StaticResource contentPageStyle}">
    <SearchBar Placeholder="Search" ></SearchBar>
    
    <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand">
      <ListView x:Name="routesList" BackgroundColor="White"></ListView>

    </StackLayout>

  </StackLayout>
  

</ContentPage>